datasource db {
  provider  = "sqlite"
  url       = "file:wrangle.db"
}

generator client {
  provider  = "cargo prisma"
  output    = "../src/prisma.rs"
}

model Project {
  id            String    @id
  name          String
  wikiType      String
  wikiURL       String?
  wikiFilepath  String?
  tags          Tag[]
}

model Tag {
  id            String    @id
  name          String    @unique
  description   String?
  color         String
  projects      Project[]
  views         View[]
}

model View {
  id            String    @id
  name          String
  color         String
  tags          Tag[]
}
