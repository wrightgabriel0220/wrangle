datasource db {
  provider  = "sqlite"
  url       = "file:wrangle.db"
}

generator client {
  provider  = "cargo prisma"
  output    = "../src/prisma.rs"
}

model Project {
  id            String                @id @default(cuid())
  name          String
  wikiType      String?
  wikiURL       String?
  wikiFilepath  String?
  tags          Tag[]
  tagRelations  ProjectTagRelation[]
}

model Tag {
  id                String                @id @default(cuid())
  name              String                @unique
  description       String?
  color             String
  projects          Project[]
  projectRelations  ProjectTagRelation[]
  views             View[]
}

model ProjectTagRelation {
  project_id    String
  tag_id        String
  project       Project                   @relation(fields: [project_id], references: [id], onDelete: Cascade)
  tag           Tag                       @relation(fields: [tag_id], references: [id], onDelete: Cascade)
  @@id([project_id, tag_id])
}

model View {
  id            String    @id @default(cuid())
  name          String
  color         String
  tags          Tag[]
}
